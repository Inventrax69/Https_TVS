    <LinearLayout
        android:id="@+id/llPickingSugg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_cyclecount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Cycle Count"
            android:gravity="left" />
        <TextView
            android:id="@+id/txt_cc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="CC Name"
            android:gravity="left" />
        <TextView
            android:id="@+id/txt_blockedlocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Blocked Locations"
            android:gravity="left" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cycleCountRecyclerView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
